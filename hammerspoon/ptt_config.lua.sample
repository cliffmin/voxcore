-- hammerspoon/ptt_config.lua.sample
-- Safe defaults for public users. Copy to ~/.hammerspoon/ptt_config.lua and edit.

return {
  -- ==================
  -- Audio Device
  -- ==================

  -- Preferred microphone (resolved by name to handle device index shifts)
  -- Use Cmd+Alt+Ctrl+I to list available devices
  AUDIO_DEVICE_NAME = "MacBook Pro Microphone",

  -- Fallback device index (only used if name match fails)
  -- AUDIO_DEVICE_INDEX = 1,

  -- ==================
  -- Model Selection
  -- ==================

  -- Automatically select Whisper model based on recording duration
  -- base.en: faster (~500ms), good for short clips
  -- medium.en: more accurate (~2s), better for longer recordings
  DYNAMIC_MODEL = true,
  MODEL_THRESHOLD_SEC = 21,      -- Switch model at this duration
  SHORT_MODEL = "base.en",       -- Model for clips < threshold
  LONG_MODEL = "medium.en",      -- Model for clips >= threshold

  -- ==================
  -- Paths
  -- ==================

  -- VoxCore CLI binary (installed via Homebrew)
  VOXCORE_CLI = "/opt/homebrew/bin/voxcore",

  -- VoxCompose CLI binary (optional, for vocabulary integration)
  -- Install: brew install voxcompose
  VOXCOMPOSE_CLI = "/opt/homebrew/bin/voxcompose",

  -- Where voice recordings (WAV) and transcriptions are saved
  -- Supports ~, $HOME, ${VAR} expansion
  NOTES_DIR = "~/Documents/VoiceNotes",

  -- Transaction log directory (default: NOTES_DIR/tx_logs)
  -- LOG_DIR = "~/.local/state/voxcore/tx_logs",

  -- ==================
  -- Key Bindings
  -- ==================

  -- Use Hammerspoon key strings (e.g., "f13", "f18", "space")
  KEYS = {
    HOLD = { mods = {"cmd", "alt", "ctrl"}, key = "space" },
  },

  -- ==================
  -- UX
  -- ==================

  SOUND_ENABLED = false,
  LOG_ENABLED = false,           -- Transaction logging (off by default for privacy)
  DEBUG_MODE = false,            -- Pass --debug to VoxCore CLI for verbose output
}
